@model IEnumerable<Musify.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Albums</h2>

@Html.ActionLink("Create New", "Create")
<br />
<br />
<table class="table" id="albums">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Artist
            </th>
            <th>
                Genre
            </th>
            <th>
                Release Date
            </th>
            <th>
                Image
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelalbum => album.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelalbum => album.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelalbum => album.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelalbum => album.ReleaseDate)
                </td>
                <td>
                    <img src="~/img/@Url.Content(album.Thumbnail)" class="albums-photo" />
                </td>
                <td>
                    @*@Html.ActionLink("Details", "Details", new { id = trainer.ID }) &nbsp&nbsp&nbsp|*@
                    <button data-album-id="@album.ID" class="btn btn-link js-delete">Delete</button>
                </td>

            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-delete").click(function (e) {
                var button = $(e.target);
                e.preventDefault();
                if (confirm("Are you sure you want to delete this album?")) {
                    $.ajax({
                        url: "api/albums/" + button.attr("data-album-id"),
                        method: "POST"
                    }).done(function () {
                        button.parents("tr").fadeOut(function () {
                            $(this).remove();
                        });
                    }).fail(function () {
                        alert("Something failed");
                    });
                }

            });
        });
    </script>
}
