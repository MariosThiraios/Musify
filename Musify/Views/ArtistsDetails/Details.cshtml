    ViewBag.Title = "Details";
}


<img src="~/img/@Url.Content(Model.Thumbnail)" class="artists-photo" />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
