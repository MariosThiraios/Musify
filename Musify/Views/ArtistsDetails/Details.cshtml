@model Musify.Models.Artist
@{ ViewBag.Title = "Details"; }

<div class="container">
    <img src="~/img/@Url.Content(Model.Thumbnail)" class="artists-photo" />
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Model.Name
            </dd>
        </dl>
        <div>
            @foreach (var album in Model.Albums)
            {
                int counter = 1;
                <div style="margin:20px;">
                    <br /> <strong>Album:</strong> <span style="margin-right:30px;">@album.Title</span>
                    <img src="~/img/@Url.Content(album.Thumbnail)" class="albums-photo-bigger" />

                    <div style="display: inline-block;  width: 500px;">
                        @foreach (var song in album.Songs)
                        {
                            <div style="margin-left: 40px; display: inline-block; width: 100%;  ">
                                <div style="margin-bottom:20px;">
                                    <span>@($"{counter}: {song.Title}")</span>
                                    <audio controls id="artistAudio">
                                        <source src="~/Songs/@song.SongPath" type="audio/mpeg" />
                                    </audio>
                                </div>
                            </div>
                            counter += 1;

                        }
                    </div>
                    <br />
                </div>}
        </div>
        <br />
        <br />
        <br />
    </div>
</div>